{
  "manifest_version": 3,
  "name": "PinYT timestamp",
  "version": "1.0",
  "description": "Bookmark specific timestamps in YouTube videos and jump to them later.",
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": ["https://www.youtube.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PinYT timestamp",
    "default_icon": {
      "48": "icons/icon-48.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "pinyt-timestamp@example.com",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "description": "This extension stores timestamps locally in your browser and does not collect or transmit any personal data.",
        "required": ["none"] 
      }
    }
  }
}